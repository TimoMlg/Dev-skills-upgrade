<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.topquizz.controller.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtViewBvn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:text="Bienvenue dans TopQuiz. Quel est votre prÃ©nom ?"></TextView>

    <EditText
        android:id="@+id/txtFieldNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Tapez ici votre nom"></EditText>

    <Button
        android:id="@+id/btnJouer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:padding="30dp"
        android:text="JOUONS!"></Button>

</LinearLayout>